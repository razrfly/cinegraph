<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Navigation -->
  <div class="mb-6">
    <.link navigate={~p"/"} class="inline-flex items-center text-blue-600 hover:text-blue-800">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Home
    </.link>
  </div>
  
<!-- Header with Search Bar -->
  <div class="mb-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div>
        <h1 class="text-4xl font-bold text-gray-900">
          üé¨ Movies Database
        </h1>
        <p class="text-gray-600 mt-2">
          <%= if @total_movies > 0 do %>
            Showing {(@page - 1) * @per_page + 1} - {min(@page * @per_page, @total_movies)} of {@total_movies} movies
          <% else %>
            No movies found
          <% end %>
        </p>
        <div class="mt-2">
          <.link
            navigate={~p"/movies/discover"}
            class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
              />
            </svg>
            Discover Movies with Tunable Scoring
          </.link>
        </div>
      </div>
      
<!-- Search Bar -->
      <div class="w-full lg:w-96">
        <form phx-submit="search" class="relative">
          <input
            type="text"
            name="search"
            value={@search_term}
            placeholder="Search movies..."
            class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            phx-change="search"
            phx-debounce="300"
          />
          <svg
            class="absolute left-3 top-2.5 w-5 h-5 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
          </svg>
          <%= if @search_term != "" do %>
            <button
              type="button"
              phx-click="search"
              phx-value-search=""
              class="absolute right-3 top-2.5 text-gray-400 hover:text-gray-600"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                />
              </svg>
            </button>
          <% end %>
        </form>
      </div>
    </div>
  </div>
  
<!-- Filter Section -->
  <div class="mb-8">
    <!-- Filter Toggle and Sort -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-4">
      <div class="flex gap-2">
        <button
          type="button"
          phx-click="toggle_filters"
          class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
            />
          </svg>
          <%= if @show_filters do %>
            Hide Basic Filters
          <% else %>
            Show Basic Filters
          <% end %>
          <%= if Enum.any?(@filters, fn {_k, v} -> v not in [nil, "", []] end) do %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Active
            </span>
          <% end %>
        </button>

        <button
          type="button"
          phx-click="toggle_advanced_filters"
          class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
            />
          </svg>
          <%= if @show_advanced_filters do %>
            Hide Advanced Filters
          <% else %>
            Show Advanced Filters
          <% end %>
          <%= if AdvancedFilters.has_active_advanced_filters(@filters) do %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
              Active
            </span>
          <% end %>
        </button>
      </div>
      
<!-- Modern Sort Controls -->
      <div class="flex items-center gap-3">
        <label class="text-sm font-medium text-gray-700">Sort by:</label>

        <div class="flex items-center bg-white border border-gray-300 rounded-lg overflow-hidden shadow-sm">
          <!-- Sort Criteria Dropdown -->
          <form phx-change="sort_criteria_changed" class="flex-1">
            <select
              name="criteria"
              value={@sort_criteria}
              class="appearance-none bg-transparent px-3 py-2 text-sm focus:outline-none border-r border-gray-300 min-w-48"
            >
              <optgroup label="Basic">
                <option value="release_date" selected={@sort_criteria == "release_date"}>
                  üìÖ Release Date
                </option>
                <option value="title" selected={@sort_criteria == "title"}>
                  üî§ Title
                </option>
                <option value="runtime" selected={@sort_criteria == "runtime"}>
                  ‚è±Ô∏è Runtime
                </option>
              </optgroup>

              <optgroup label="Ratings">
                <option value="rating" selected={@sort_criteria == "rating"}>
                  ‚≠ê Rating
                </option>
                <option value="popularity" selected={@sort_criteria == "popularity"}>
                  üî• Popularity
                </option>
              </optgroup>

              <optgroup label="Discovery Metrics">
                <option value="popular_opinion" selected={@sort_criteria == "popular_opinion"}>
                  üé¨ Popular Opinion
                </option>
                <option value="critical_acclaim" selected={@sort_criteria == "critical_acclaim"}>
                  üèÜ Critical Acclaim
                </option>
                <option
                  value="industry_recognition"
                  selected={@sort_criteria == "industry_recognition"}
                >
                  üåü Industry Recognition
                </option>
                <option value="cultural_impact" selected={@sort_criteria == "cultural_impact"}>
                  üìö Cultural Impact
                </option>
                <option value="people_quality" selected={@sort_criteria == "people_quality"}>
                  üë• People Quality
                </option>
              </optgroup>
            </select>
          </form>
          
<!-- Direction Toggle Button -->
          <button
            type="button"
            phx-click="toggle_sort_direction"
            class="px-3 py-2 text-xs text-gray-600 hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition-colors min-w-20 flex items-center justify-center gap-1"
            title={
              if @sort_direction == :desc,
                do: "Currently: High to Low. Click to sort Low to High.",
                else: "Currently: Low to High. Click to sort High to Low."
            }
          >
            <span class="font-medium">
              {if @sort_direction == :desc, do: "High‚ÜíLow", else: "Low‚ÜíHigh"}
            </span>
            <svg
              class={"w-3 h-3 transition-transform #{if @sort_direction == :asc, do: "", else: "rotate-180"}"}
              viewBox="0 0 12 12"
              fill="currentColor"
            >
              <path d="M6 1l5 5H7v5H5V6H1l5-5z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    
<!-- Filter Panel -->
    <%= if @show_filters do %>
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <form phx-change="apply_filters">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            <!-- Genre Filter -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Genres
              </label>
              <.multi_select_dropdown
                id="genres-select"
                name="filters[genres][]"
                options={@available_genres}
                selected={@filters.genres || []}
                placeholder="Select genres..."
                label_field={:name}
                value_field={:id}
              />
            </div>
            
<!-- Country Filter -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Production Countries
              </label>
              <.multi_select_dropdown
                id="countries-select"
                name="filters[countries][]"
                options={@available_countries}
                selected={@filters.countries || []}
                placeholder="Select countries..."
                label_field={:name}
                value_field={:id}
              />
            </div>
            
<!-- Language Filter -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Languages
              </label>
              <.multi_select_dropdown
                id="languages-select"
                name="filters[languages][]"
                options={@available_languages}
                selected={@filters.languages || []}
                placeholder="Select languages..."
                label_field={:english_name}
                value_field={:iso_639_1}
              />
            </div>
            
<!-- Canonical Lists Filter -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Lists
              </label>
              <.multi_select_dropdown
                id="lists-select"
                name="filters[lists][]"
                options={@available_lists}
                selected={@filters.lists || []}
                placeholder="Select lists..."
                label_field={:name}
                value_field={:key}
              />
            </div>
            
<!-- Year Range -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Year Range
              </label>
              <div class="flex gap-2">
                <input
                  type="number"
                  name="filters[year_from]"
                  value={@filters.year_from}
                  placeholder="From"
                  min="1900"
                  max={Date.utc_today().year}
                  class="w-1/2 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                />
                <input
                  type="number"
                  name="filters[year_to]"
                  value={@filters.year_to}
                  placeholder="To"
                  min="1900"
                  max={Date.utc_today().year}
                  class="w-1/2 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                />
              </div>
            </div>
            
<!-- Decade Filter -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Decade
              </label>
              <select
                name="filters[decade]"
                class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              >
                <option value="">All Decades</option>
                <%= for decade <- @available_decades do %>
                  <option
                    value={decade.value}
                    selected={to_string(decade.value) == @filters.decade}
                  >
                    {decade.label}
                  </option>
                <% end %>
              </select>
            </div>
            
<!-- Runtime Range -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Runtime (minutes)
              </label>
              <div class="flex gap-2">
                <input
                  type="number"
                  name="filters[runtime_min]"
                  value={@filters.runtime_min}
                  placeholder="Min"
                  min="0"
                  max="500"
                  class="w-1/2 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                />
                <input
                  type="number"
                  name="filters[runtime_max]"
                  value={@filters.runtime_max}
                  placeholder="Max"
                  min="0"
                  max="500"
                  class="w-1/2 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                />
              </div>
            </div>
            
<!-- Minimum Rating -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Minimum Rating
              </label>
              <input
                type="number"
                name="filters[rating_min]"
                value={@filters.rating_min}
                placeholder="e.g., 7.0"
                min="0"
                max="10"
                step="0.1"
                class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              />
            </div>
            
<!-- Show Unreleased Films -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Include Unreleased
              </label>
              <div class="mt-2">
                <label class="inline-flex items-center">
                  <input
                    type="checkbox"
                    name="filters[show_unreleased]"
                    value="true"
                    checked={@filters.show_unreleased == "true"}
                    class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                  />
                  <span class="ml-2 text-sm text-gray-600">Show unreleased films</span>
                </label>
              </div>
            </div>
          </div>
          
<!-- Filter Actions -->
          <div class="mt-4 flex justify-end gap-2">
            <button
              type="button"
              phx-click="clear_filters"
              class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Clear Filters
            </button>
          </div>
        </form>
      </div>
    <% end %>
    
<!-- Advanced Filter Panel -->
    <%= if @show_advanced_filters do %>
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 mt-4">
        <form phx-change="apply_filters">
          <AdvancedFilters.advanced_filters
            filters={@filters}
            festival_organizations={@festival_organizations}
            director_options={@director_options}
            actor_options={@actor_options}
            person_options={@person_options}
            form={@form}
            myself={nil}
          />
        </form>
      </div>
    <% end %>
  </div>
  
<!-- Movies Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <%= for movie <- @movies do %>
      <.link navigate={~p"/movies/#{movie.id}"} class="group block">
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden">
          <!-- Movie Poster -->
          <div class="aspect-[2/3] bg-gray-200 relative">
            <%= if movie.poster_path do %>
              <img
                src={Cinegraph.Movies.Movie.poster_url(movie, "w500")}
                alt={movie.title}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            <% else %>
              <div class="w-full h-full flex items-center justify-center">
                <span class="text-gray-400 text-lg">No Image</span>
              </div>
            <% end %>
            
<!-- Discovery Score Badge -->
            <%= if movie.discovery_score && has_meaningful_score?(movie.discovery_score) do %>
              <div class="absolute top-2 left-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-sm px-3 py-1 rounded-full font-medium shadow-lg">
                üéØ {to_percentage(movie.discovery_score)}%
              </div>
            <% end %>
          </div>
          
<!-- Movie Info -->
          <div class="p-4">
            <h3 class="font-semibold text-lg text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2">
              {movie.title}
            </h3>

            <%= if movie.release_date do %>
              <p class="text-gray-500 text-sm mt-1">
                {Calendar.strftime(movie.release_date, "%Y")}
              </p>
            <% end %>
            
<!-- Useful Metrics -->
            <div class="mt-3 space-y-2">
              <!-- Score Breakdown -->
              <%= if movie.score_components do %>
                <div class="flex flex-wrap gap-1 text-xs">
                  <%= if movie.score_components.popular_opinion && has_meaningful_score?(movie.score_components.popular_opinion) do %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded bg-green-50 text-green-700 border border-green-200">
                      üé¨ {to_percentage(movie.score_components.popular_opinion)}%
                    </span>
                  <% end %>
                  <%= if movie.score_components.critical_acclaim && has_meaningful_score?(movie.score_components.critical_acclaim) do %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded bg-blue-50 text-blue-700 border border-blue-200">
                      üèÜ {to_percentage(movie.score_components.critical_acclaim)}%
                    </span>
                  <% end %>
                  <%= if movie.score_components.industry_recognition && has_meaningful_score?(movie.score_components.industry_recognition) do %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded bg-yellow-50 text-yellow-700 border border-yellow-200">
                      üåü {to_percentage(movie.score_components.industry_recognition)}%
                    </span>
                  <% end %>
                  <%= if movie.score_components.cultural_impact && has_meaningful_score?(movie.score_components.cultural_impact) do %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded bg-purple-50 text-purple-700 border border-purple-200">
                      üìö {to_percentage(movie.score_components.cultural_impact)}%
                    </span>
                  <% end %>
                  <%= if movie.score_components.people_quality && has_meaningful_score?(movie.score_components.people_quality) do %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded bg-orange-50 text-orange-700 border border-orange-200">
                      üë• {to_percentage(movie.score_components.people_quality)}%
                    </span>
                  <% end %>
                </div>
              <% end %>
              
<!-- Additional Useful Info -->
              <div class="flex flex-wrap gap-2 text-xs text-gray-500">
                <!-- Show canonical list presence -->
                <%= if movie.canonical_sources && map_size(movie.canonical_sources) > 0 do %>
                  <span class="inline-flex items-center">
                    üìù Featured in {map_size(movie.canonical_sources)} list#{if map_size(
                                                                                 movie.canonical_sources
                                                                               ) > 1,
                                                                               do: "s",
                                                                               else: ""}
                  </span>
                <% end %>
                
<!-- Show if it has awards -->
                <%= if movie.score_components && movie.score_components.industry_recognition && award_worthy_score?(movie.score_components.industry_recognition) do %>
                  <span class="inline-flex items-center text-amber-600">
                    üèÜ Award Winner
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </.link>
    <% end %>
  </div>
  
<!-- Empty State -->
  <%= if Enum.empty?(@movies) do %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2h4a1 1 0 011 1v1a1 1 0 01-1 1H3a1 1 0 01-1-1V5a1 1 0 011-1h4zm0 0v14a2 2 0 002 2h6a2 2 0 002-2V4H7z"
          />
        </svg>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No movies found</h3>
      <p class="mt-1 text-sm text-gray-500">Try adjusting your filters or search criteria.</p>
    </div>
  <% end %>
  
<!-- Pagination -->
  <%= if @total_pages > 1 do %>
    <div class="mt-8 flex items-center justify-between">
      <!-- Mobile pagination -->
      <div class="flex flex-1 justify-between sm:hidden">
        <%= if @page > 1 do %>
          <.link
            navigate={build_pagination_path(assigns, %{"page" => @page - 1})}
            class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
          >
            Previous
          </.link>
        <% else %>
          <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
            Previous
          </span>
        <% end %>

        <%= if @page < @total_pages do %>
          <.link
            navigate={build_pagination_path(assigns, %{"page" => @page + 1})}
            class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
          >
            Next
          </.link>
        <% else %>
          <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
            Next
          </span>
        <% end %>
      </div>
      
<!-- Desktop pagination -->
      <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Page <span class="font-medium">{@page}</span>
            of <span class="font-medium">{@total_pages}</span>
          </p>
        </div>

        <div>
          <nav
            class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px"
            aria-label="Pagination"
          >
            <!-- Previous button -->
            <%= if @page > 1 do %>
              <.link
                navigate={build_pagination_path(assigns, %{"page" => @page - 1})}
                class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
              >
                <span class="sr-only">Previous</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </.link>
            <% else %>
              <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                <span class="sr-only">Previous</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </span>
            <% end %>
            
<!-- Page numbers -->
            <%= for page_num <- pagination_range(@page, @total_pages) do %>
              <%= if page_num == "..." do %>
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                  ...
                </span>
              <% else %>
                <.link
                  navigate={build_pagination_path(assigns, %{"page" => page_num})}
                  class={[
                    "relative inline-flex items-center px-4 py-2 border text-sm font-medium",
                    if(page_num == @page,
                      do: "z-10 bg-blue-50 border-blue-500 text-blue-600",
                      else: "bg-white border-gray-300 text-gray-500 hover:bg-gray-50"
                    )
                  ]}
                >
                  {page_num}
                </.link>
              <% end %>
            <% end %>
            
<!-- Next button -->
            <%= if @page < @total_pages do %>
              <.link
                navigate={build_pagination_path(assigns, %{"page" => @page + 1})}
                class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
              >
                <span class="sr-only">Next</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </.link>
            <% else %>
              <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                <span class="sr-only">Next</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </span>
            <% end %>
          </nav>
        </div>
      </div>
    </div>
  <% end %>
</div>
