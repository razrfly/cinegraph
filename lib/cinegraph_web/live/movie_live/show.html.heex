<!-- Hero Section with Backdrop -->
<div class="relative">
  <!-- Backdrop Image -->
  <%= if @movie.backdrop_path do %>
    <div class="absolute inset-0">
      <img
        src={Cinegraph.Movies.Movie.backdrop_url(@movie, "w1280")}
        alt=""
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-black/30"></div>
    </div>
  <% else %>
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 to-gray-800"></div>
  <% end %>
  
<!-- Hero Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-16">
    <!-- Navigation -->
    <div class="mb-8 flex items-center justify-between">
      <.link
        navigate={~p"/movies"}
        class="inline-flex items-center text-white/80 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
        Back to Movies
      </.link>
      
<!-- Legacy Page Button -->
      <.link
        navigate={~p"/movies/#{@movie.slug || @movie.id}/legacy"}
        class="inline-flex items-center px-3 py-1.5 bg-amber-600/80 hover:bg-amber-600 text-white text-sm rounded-md transition-colors"
      >
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
        View Legacy Page
      </.link>
    </div>
    
<!-- Movie Info -->
    <div class="flex flex-col lg:flex-row gap-6 lg:gap-8 items-start">
      <!-- Poster -->
      <div class="flex-shrink-0 mx-auto lg:mx-0">
        <%= if @movie.poster_path do %>
          <img
            src={Cinegraph.Movies.Movie.poster_url(@movie, "w500")}
            alt={@movie.title}
            class="w-48 sm:w-64 md:w-72 lg:w-80 rounded-lg shadow-2xl"
          />
        <% else %>
          <div class="w-48 sm:w-64 md:w-72 lg:w-80 h-72 sm:h-96 md:h-[432px] lg:h-[480px] bg-gray-800 rounded-lg shadow-2xl flex items-center justify-center">
            <span class="text-gray-400 text-lg">No Poster</span>
          </div>
        <% end %>
      </div>
      
<!-- Movie Details -->
      <div class="flex-1 text-white min-h-0">
        <div class="flex items-start justify-between mb-4">
          <div class="min-w-0">
            <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-2 leading-tight">
              {@movie.title}
            </h1>
            <%= if @movie.tagline && @movie.tagline != "" do %>
              <p class="text-base sm:text-lg md:text-xl text-white/80 italic mb-4 leading-relaxed">
                "{@movie.tagline}"
              </p>
            <% end %>
          </div>
        </div>
        
<!-- Quick Info -->
        <div class="flex flex-wrap gap-4 mb-6 text-sm">
          <%= if @movie.release_date do %>
            <span class="bg-white/20 backdrop-blur px-3 py-1 rounded-full">
              {Calendar.strftime(@movie.release_date, "%Y")}
            </span>
          <% end %>
          <%= if @movie.runtime do %>
            <span class="bg-white/20 backdrop-blur px-3 py-1 rounded-full">
              {@movie.runtime} min
            </span>
          <% end %>
          <%= if (rating = get_in(@movie.omdb_data, ["Rated"])) && rating != "N/A" do %>
            <span class="bg-white/20 backdrop-blur px-3 py-1 rounded-full">
              {rating}
            </span>
          <% end %>
        </div>
        
<!-- External Ratings -->
        <CinegraphWeb.RatingComponents.hero_ratings_row movie={@movie} class="mb-4" />
        
<!-- Overview -->
        <%= if @movie.overview && @movie.overview != "" do %>
          <div class="mb-6 max-w-3xl">
            <p class={[
              "text-white/90 text-base leading-relaxed",
              !@overview_expanded && String.length(@movie.overview) > 200 && "line-clamp-2"
            ]}>
              {@movie.overview}
            </p>
            <%= if String.length(@movie.overview) > 200 do %>
              <button
                phx-click="toggle_overview"
                class="text-blue-400 hover:text-blue-300 text-sm mt-1 transition-colors"
              >
                {if @overview_expanded, do: "Show less", else: "Show more"}
              </button>
            <% end %>
          </div>
        <% end %>
        
<!-- Key People -->
        <%= if length(@movie.directors) > 0 do %>
          <div class="mb-4">
            <h3 class="text-sm font-semibold text-white/60 uppercase tracking-wide mb-2">
              Directed by
            </h3>
            <div class="flex flex-wrap gap-2">
              <%= for director <- @movie.directors do %>
                <.link
                  navigate={~p"/people/#{director.person.slug}"}
                  class="text-white hover:text-blue-300 font-medium transition-colors"
                >
                  {director.person.name}
                </.link>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
<!-- Cinegraph Score Card -->
      <div class="bg-gray-900 rounded-xl p-4 sm:p-6 w-full lg:w-auto lg:min-w-[300px]">
        <div class="flex items-center justify-center mb-4">
          <h3 class="text-white text-lg font-semibold text-center">Cinegraph Score</h3>
          <button
            phx-click="show_score_modal"
            class="ml-2 text-white/60 hover:text-white transition-colors"
            title="About This Score"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </button>
        </div>
        
<!-- Main Score -->
        <div class="text-center mb-6">
          <div class="text-5xl font-bold text-white mb-2">
            <% score_data = Map.get(@movie, :score_data) %>
            <%= if score_data do %>
              {score_data.overall_score}
            <% else %>
              N/A
            <% end %>
          </div>
          <div class="text-white/60 text-sm">Overall Quality</div>
        </div>
        
<!-- 5-Category Breakdown -->
        <% score_data = Map.get(@movie, :score_data) %>
        <%= if score_data do %>
          <div class="space-y-3">
            <!-- Popular Opinion -->
            <div class="flex items-center justify-between group">
              <div class="flex items-center">
                <span class="text-white/80 text-sm">Popular Opinion</span>
                <div class="relative ml-1">
                  <svg
                    class="w-3.5 h-3.5 text-white/40 group-hover:text-white/60 transition-colors cursor-help"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    title="IMDb, TMDb, Metacritic & Rotten Tomatoes ratings"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  <div class="hidden group-hover:block absolute z-10 w-64 p-2 mt-1 text-xs bg-gray-900 text-white rounded-lg shadow-lg left-0">
                    <strong>Popular Opinion:</strong>
                    Aggregate of IMDb, TMDb, Metacritic, and Rotten Tomatoes ratings
                  </div>
                </div>
              </div>
              <div class="flex items-center">
                <div class="w-16 h-2 bg-white/20 rounded-full mr-2">
                  <div
                    class="h-2 bg-blue-400 rounded-full"
                    style={"width: #{score_data.components.popular_opinion * 10}%"}
                  >
                  </div>
                </div>
                <span class="text-white text-sm w-8">
                  {score_data.components.popular_opinion}
                </span>
              </div>
            </div>
            
<!-- Industry Recognition -->
            <div class="flex items-center justify-between group">
              <div class="flex items-center">
                <span class="text-white/80 text-sm">Industry Recognition</span>
                <div class="relative ml-1">
                  <svg
                    class="w-3.5 h-3.5 text-white/40 group-hover:text-white/60 transition-colors cursor-help"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    title="Festival awards and nominations"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  <div class="hidden group-hover:block absolute z-10 w-64 p-2 mt-1 text-xs bg-gray-900 text-white rounded-lg shadow-lg left-0">
                    <strong>Industry Recognition:</strong>
                    Awards and nominations from major film festivals (Cannes, Venice, Berlin, etc.)
                  </div>
                </div>
              </div>
              <div class="flex items-center">
                <div class="w-16 h-2 bg-white/20 rounded-full mr-2">
                  <div
                    class="h-2 bg-yellow-400 rounded-full"
                    style={"width: #{score_data.components.industry_recognition * 10}%"}
                  >
                  </div>
                </div>
                <span class="text-white text-sm w-8">
                  {score_data.components.industry_recognition}
                </span>
              </div>
            </div>
            
<!-- Cultural Impact -->
            <div class="flex items-center justify-between group">
              <div class="flex items-center">
                <span class="text-white/80 text-sm">Cultural Impact</span>
                <div class="relative ml-1">
                  <svg
                    class="w-3.5 h-3.5 text-white/40 group-hover:text-white/60 transition-colors cursor-help"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    title="Canonical lists and popularity metrics"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  <div class="hidden group-hover:block absolute z-10 w-64 p-2 mt-1 text-xs bg-gray-900 text-white rounded-lg shadow-lg left-0">
                    <strong>Cultural Impact:</strong>
                    Presence in canonical film lists (Criterion, AFI, BFI) and long-term popularity
                  </div>
                </div>
              </div>
              <div class="flex items-center">
                <div class="w-16 h-2 bg-white/20 rounded-full mr-2">
                  <div
                    class="h-2 bg-purple-400 rounded-full"
                    style={"width: #{score_data.components.cultural_impact * 10}%"}
                  >
                  </div>
                </div>
                <span class="text-white text-sm w-8">
                  {score_data.components.cultural_impact}
                </span>
              </div>
            </div>
            
<!-- People Quality -->
            <div class="flex items-center justify-between group">
              <div class="flex items-center">
                <span class="text-white/80 text-sm">People Quality</span>
                <div class="relative ml-1">
                  <svg
                    class="w-3.5 h-3.5 text-white/40 group-hover:text-white/60 transition-colors cursor-help"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    title="Quality of directors, actors, and crew"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  <div class="hidden group-hover:block absolute z-10 w-64 p-2 mt-1 text-xs bg-gray-900 text-white rounded-lg shadow-lg left-0">
                    <strong>People Quality:</strong>
                    Caliber of director, actors, and key crew based on their overall career achievements
                  </div>
                </div>
              </div>
              <div class="flex items-center">
                <div class="w-16 h-2 bg-white/20 rounded-full mr-2">
                  <div
                    class="h-2 bg-red-400 rounded-full"
                    style={"width: #{score_data.components.people_quality * 10}%"}
                  >
                  </div>
                </div>
                <span class="text-white text-sm w-8">{score_data.components.people_quality}</span>
              </div>
            </div>
            
<!-- Financial Performance -->
            <div class="flex items-center justify-between group">
              <div class="flex items-center">
                <span class="text-white/80 text-sm">Financial Performance</span>
                <div class="relative ml-1">
                  <svg
                    class="w-3.5 h-3.5 text-white/40 group-hover:text-white/60 transition-colors cursor-help"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    title="Box office revenue and budget performance"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  <div class="hidden group-hover:block absolute z-10 w-64 p-2 mt-1 text-xs bg-gray-900 text-white rounded-lg shadow-lg left-0">
                    <strong>Financial Performance:</strong>
                    Box office revenue and return on investment (60% revenue scale, 40% ROI ratio)
                  </div>
                </div>
              </div>
              <div class="flex items-center">
                <div class="w-16 h-2 bg-white/20 rounded-full mr-2">
                  <div
                    class="h-2 bg-green-400 rounded-full"
                    style={"width: #{score_data.components.financial_performance * 10}%"}
                  >
                  </div>
                </div>
                <span class="text-white text-sm w-8">
                  {score_data.components.financial_performance}
                </span>
              </div>
            </div>
          </div>
        <% else %>
          <p class="text-white/60 text-sm text-center">Score data unavailable</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Main Content Container -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  
<!-- Tab Navigation -->
  <div class="border-b border-gray-200 mb-8 -mx-4 sm:mx-0">
    <nav
      class="-mb-px flex space-x-2 sm:space-x-4 lg:space-x-8 overflow-x-auto px-4 sm:px-0 scrollbar-hide"
      aria-label="Tabs"
    >
      <button
        phx-click="switch_tab"
        phx-value-tab="overview"
        class={[
          "whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition-colors flex-shrink-0",
          if(@active_tab == "overview",
            do: "border-blue-500 text-blue-600",
            else: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          )
        ]}
      >
        Overview
      </button>
      <button
        phx-click="switch_tab"
        phx-value-tab="cast-crew"
        class={[
          "whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition-colors flex-shrink-0",
          if(@active_tab == "cast-crew",
            do: "border-blue-500 text-blue-600",
            else: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          )
        ]}
      >
        Cast & Crew
      </button>
      <button
        phx-click="switch_tab"
        phx-value-tab="connections"
        class={[
          "whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition-colors flex-shrink-0",
          if(@active_tab == "connections",
            do: "border-blue-500 text-blue-600",
            else: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          )
        ]}
      >
        Connections
      </button>
      <button
        phx-click="switch_tab"
        phx-value-tab="awards"
        class={[
          "whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition-colors flex-shrink-0",
          if(@active_tab == "awards",
            do: "border-blue-500 text-blue-600",
            else: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          )
        ]}
      >
        Awards
      </button>
      <button
        phx-click="switch_tab"
        phx-value-tab="collaborations"
        class={[
          "whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition-colors flex-shrink-0",
          if(@active_tab == "collaborations",
            do: "border-blue-500 text-blue-600",
            else: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          )
        ]}
      >
        Collabs
      </button>
      <button
        phx-click="switch_tab"
        phx-value-tab="media"
        class={[
          "whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition-colors flex-shrink-0",
          if(@active_tab == "media",
            do: "border-blue-500 text-blue-600",
            else: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          )
        ]}
      >
        Media
      </button>
      <button
        phx-click="switch_tab"
        phx-value-tab="details"
        class={[
          "whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition-colors flex-shrink-0",
          if(@active_tab == "details",
            do: "border-blue-500 text-blue-600",
            else: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
          )
        ]}
      >
        Details
      </button>
    </nav>
  </div>
  
<!-- Tab Content -->
  <div class="tab-content">
    
<!-- Overview Tab -->
    <%= if @active_tab == "overview" do %>
      
<!-- Movie Stats Grid -->
      <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-3 sm:gap-4 md:gap-6 mb-8">
        <%= if (budget = Map.get(@movie, :budget)) && budget > 0 do %>
          <div class="bg-white rounded-lg shadow p-3 sm:p-4 md:p-6 text-center">
            <div class="text-lg sm:text-xl md:text-2xl font-bold text-green-600 mb-1">
              ${trunc(budget / 1_000_000)}M
            </div>
            <div class="text-xs sm:text-sm text-gray-500">Budget</div>
          </div>
        <% end %>

        <%= if (revenue = Map.get(@movie, :revenue)) && revenue > 0 do %>
          <div class="bg-white rounded-lg shadow p-3 sm:p-4 md:p-6 text-center">
            <div class="text-lg sm:text-xl md:text-2xl font-bold text-blue-600 mb-1">
              ${trunc(revenue / 1_000_000)}M
            </div>
            <div class="text-xs sm:text-sm text-gray-500">Box Office</div>
          </div>
        <% end %>

        <div class="bg-white rounded-lg shadow p-3 sm:p-4 md:p-6 text-center">
          <div class="text-lg sm:text-xl md:text-2xl font-bold text-purple-600 mb-1">
            {length(@movie.cast) + length(@movie.crew)}
          </div>
          <div class="text-xs sm:text-sm text-gray-500">Cast & Crew</div>
        </div>

        <% all_noms_overview = @movie.all_festival_nominations %>
        <% total_award_count =
          Enum.sum(
            Enum.map(all_noms_overview, fn org -> org.total_wins + org.total_nominations end)
          ) %>
        <div class="bg-white rounded-lg shadow p-3 sm:p-4 md:p-6 text-center">
          <div class="text-lg sm:text-xl md:text-2xl font-bold text-orange-600 mb-1">
            {total_award_count}
          </div>
          <div class="text-xs sm:text-sm text-gray-500">Award Nominations</div>
          <%= if total_award_count > 0 do %>
            <div class="mt-1 sm:mt-2 text-xs text-gray-400 line-clamp-2">
              <%= for org <- all_noms_overview do %>
                <span class="inline-block mr-1 sm:mr-2">
                  {(get_organization_display_name(org.organization_name) || "")
                  |> String.split(" ")
                  |> List.first("Unknown")}: {org.total_wins + org.total_nominations}
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
<!-- Key Collaborations -->
      <% key_collaborations = Map.get(@movie, :key_collaborations, %{}) %>
      <%= if Map.get(key_collaborations, :total_reunions, 0) > 0 do %>
        <div class="bg-white rounded-lg shadow p-6 mb-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4">üé¨ Notable Collaborations</h3>

          <% director_actor_reunions = Map.get(key_collaborations, :director_actor_reunions, []) %>
          <%= if length(director_actor_reunions) > 0 do %>
            <div class="mb-6">
              <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wide mb-3">
                Director-Actor Reunions
              </h4>
              <div class="space-y-3">
                <%= for collab <- director_actor_reunions do %>
                  <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                      <span class="text-gray-900 font-medium">{collab.person_b.name}</span>
                      <span class="text-gray-500">&</span>
                      <span class="text-gray-900 font-medium">{collab.person_a.name}</span>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-200 text-blue-800">
                      {format_ordinal(collab.collaboration_count)} collaboration
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% actor_partnerships = Map.get(key_collaborations, :actor_partnerships, []) %>
          <%= if length(actor_partnerships) > 0 do %>
            <div>
              <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wide mb-3">
                Actor Partnerships
              </h4>
              <div class="space-y-3">
                <%= for collab <- actor_partnerships do %>
                  <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                      <span class="text-gray-900 font-medium">{collab.person_a.name}</span>
                      <span class="text-gray-500">&</span>
                      <span class="text-gray-900 font-medium">{collab.person_b.name}</span>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-200 text-green-800">
                      {collab.collaboration_count} films together
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      
<!-- External Ratings -->
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h3 class="text-xl font-bold text-gray-900 mb-4">External Ratings</h3>
        <%= if length(@movie.external_ratings) > 0 do %>
          <.external_ratings_grid ratings={@movie.external_ratings} limit={8} movie={@movie} />
        <% else %>
          <p class="text-gray-600">No external ratings available.</p>
        <% end %>
      </div>
    <% end %>
    
<!-- Cast & Crew Tab -->
    <%= if @active_tab == "cast-crew" do %>
      <!-- Visual Cast Display -->
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-gray-900">Cast ({length(@movie.cast)})</h3>
          <%= if length(@movie.cast) > 15 do %>
            <span class="text-sm text-gray-500">Showing top 15 of {length(@movie.cast)}</span>
          <% end %>
