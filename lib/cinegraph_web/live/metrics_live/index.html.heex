                    <div class="w-20 bg-gray-200 rounded-full h-2 mr-2">
                      <div
                        class="bg-orange-600 h-2 rounded-full"
                        style={"width: #{min(100, get_profile_weight_actual(profile, "people"))}%"}
                      >
                      </div>
                    </div>
                    <span class="text-sm font-medium">
                      {get_profile_weight_actual(profile, "people")}%
                    </span>
                  </div>
                </td>
              <% end %>
            </tr>
            
<!-- Add a total row to show the sum -->
            <tr class="border-t-2 border-gray-300">
              <td class="px-4 py-2 text-sm font-bold text-gray-900">
                TOTAL
              </td>
              <%= for profile <- @weight_profiles do %>
                <% weights = profile.category_weights || %{} %>
                <% sum = Map.values(weights) |> Enum.sum() %>
                <td class="px-4 py-2 text-center">
                  <span class={"text-sm font-bold #{if abs(sum - 1.0) > 0.01, do: "text-red-600", else: "text-green-600"}"}>
                    {Float.round(sum * 100, 1)}%
                  </span>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
      
<!-- Profile selector buttons -->
      <div class="mt-4 flex flex-wrap gap-2">
        <%= for profile <- @weight_profiles do %>
          <button
            phx-click="select_profile"
            phx-value-profile={profile.name}
            class={"px-4 py-2 rounded-lg text-sm font-medium transition-colors #{if @selected_profile && @selected_profile.name == profile.name, do: "bg-blue-600 text-white", else: "bg-gray-100 text-gray-700 hover:bg-gray-200"}"}
          >
            {profile.name}
            <%= if profile.is_default do %>
              <span class="ml-1">‚òÖ</span>
            <% end %>
          </button>
        <% end %>
      </div>
    </div>
    
<!-- 3. METRIC DEFINITIONS TABLE -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900">Metric Definitions & Coverage</h2>
        
<!-- Category filter -->
        <div class="flex gap-2">
          <button
            phx-click="filter_category"
            phx-value-category="all"
            class={"px-3 py-1 rounded text-sm #{if is_nil(@selected_category), do: "bg-gray-800 text-white", else: "bg-gray-200 text-gray-700"}"}
          >
            All
          </button>
          <button
            phx-click="filter_category"
            phx-value-category="ratings"
            class={"px-3 py-1 rounded text-sm #{if @selected_category == "ratings", do: "bg-blue-600 text-white", else: "bg-blue-100 text-blue-700"}"}
          >
            Ratings
          </button>
          <button
            phx-click="filter_category"
            phx-value-category="awards"
            class={"px-3 py-1 rounded text-sm #{if @selected_category == "awards", do: "bg-yellow-600 text-white", else: "bg-yellow-100 text-yellow-700"}"}
          >
            Awards
          </button>
          <button
            phx-click="filter_category"
            phx-value-category="cultural"
            class={"px-3 py-1 rounded text-sm #{if @selected_category == "cultural", do: "bg-purple-600 text-white", else: "bg-purple-100 text-purple-700"}"}
          >
            Cultural
          </button>
          <button
            phx-click="filter_category"
            phx-value-category="people"
            class={"px-3 py-1 rounded text-sm #{if @selected_category == "people", do: "bg-orange-600 text-white", else: "bg-orange-100 text-orange-700"}"}
          >
            People
          </button>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                Code
              </th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                Name
              </th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                Category
              </th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                Source
              </th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                Coverage
              </th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">
                Reliability
              </th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                Normalization
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <%= for metric <- @metric_definitions do %>
              <%= if is_nil(@selected_category) || metric.category == @selected_category do %>
                <% {count, percentage} =
                  get_metric_coverage(metric.code, @coverage_stats, @total_movies) %>
                <tr>
                  <td class="px-4 py-2 text-sm font-mono text-gray-900">
                    {metric.code}
                  </td>
                  <td class="px-4 py-2 text-sm text-gray-900">
                    {metric.name}
                  </td>
                  <td class="px-4 py-2">
                    <span class={"inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-#{category_color(metric.category)}-100 text-#{category_color(metric.category)}-800"}>
                      {metric.category}/{metric.subcategory || "general"}
                    </span>
                  </td>
                  <td class="px-4 py-2 text-sm text-gray-600">
                    {metric.source_table}
                  </td>
                  <td class="px-4 py-2">
                    <div class="flex items-center">
                      <div class="w-24 bg-gray-200 rounded-full h-2 mr-2">
                        <div
                          class={"h-2 rounded-full #{if percentage > 50, do: "bg-green-600", else: (if percentage > 20, do: "bg-yellow-600", else: "bg-red-600")}"}
                          style={"width: #{percentage}%"}
                        >
                        </div>
                      </div>
                      <span class="text-xs text-gray-600">
                        {percentage}% ({format_number(count)})
                      </span>
                    </div>
                  </td>
                  <td class="px-4 py-2 text-center">
                    <span class="text-sm font-medium">
                      {Float.round(metric.source_reliability || 1.0, 2)}
                    </span>
                  </td>
                  <td class="px-4 py-2 text-sm text-gray-600">
                    {metric.normalization_type}
                    <%= if metric.raw_scale_min && metric.raw_scale_max do %>
                      <span class="text-xs">
                        ({metric.raw_scale_min}-{metric.raw_scale_max})
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
<!-- 4. VALUE DISTRIBUTIONS -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Value Distributions</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- IMDb Rating Distribution -->
        <div>
          <h3 class="font-semibold text-gray-900 mb-2">IMDb Rating Distribution</h3>
          <div class="space-y-2">
            <%= for bucket <- ["0-2", "2-4", "4-6", "6-8", "8-10"] do %>
              <% count = Map.get(@value_distributions.imdb_rating, bucket, 0) %>
              <% total = Enum.sum(Map.values(@value_distributions.imdb_rating)) %>
              <div class="flex items-center">
                <span class="w-12 text-xs text-gray-600">{bucket}</span>
                <div class="flex-1 bg-gray-200 rounded h-6 mr-2">
                  <div
                    class="bg-blue-600 h-6 rounded flex items-center justify-end pr-2"
                    style={"width: #{distribution_bar_width(count, total)}"}
                  >
                    <span class="text-xs text-white font-medium">
                      {if count > 0, do: format_number(count), else: ""}
                    </span>
                  </div>
                </div>
                <span class="text-xs text-gray-600 w-12 text-right">
                  {format_percentage(count, total)}
                </span>
              </div>
            <% end %>
          </div>
        </div>
        
<!-- Oscar Nominations Distribution -->
        <div>
          <h3 class="font-semibold text-gray-900 mb-2">Oscar Nominations</h3>
          <div class="space-y-2">
            <%= for bucket <- ["0", "1-3", "4-7", "8+"] do %>
              <% count = Map.get(@value_distributions.oscar_nominations, bucket, 0) %>
              <% total = Enum.sum(Map.values(@value_distributions.oscar_nominations)) %>
              <div class="flex items-center">
                <span class="w-12 text-xs text-gray-600">{bucket}</span>
                <div class="flex-1 bg-gray-200 rounded h-6 mr-2">
                  <div
                    class="bg-yellow-600 h-6 rounded flex items-center justify-end pr-2"
                    style={"width: #{distribution_bar_width(count, total)}"}
                  >
                    <span class="text-xs text-white font-medium">
                      {if count > 0, do: format_number(count), else: ""}
                    </span>
                  </div>
                </div>
                <span class="text-xs text-gray-600 w-12 text-right">
                  {format_percentage(count, total)}
                </span>
              </div>
            <% end %>
          </div>
        </div>
        
<!-- TMDb Popularity Distribution -->
        <div>
          <h3 class="font-semibold text-gray-900 mb-2">TMDb Popularity Score</h3>
          <div class="space-y-2">
            <%= for bucket <- ["0-10", "10-50", "50-100", "100-500", "500+"] do %>
              <% count = Map.get(@value_distributions.tmdb_popularity, bucket, 0) %>
              <% total = Enum.sum(Map.values(@value_distributions.tmdb_popularity)) %>
              <div class="flex items-center">
                <span class="w-16 text-xs text-gray-600">{bucket}</span>
                <div class="flex-1 bg-gray-200 rounded h-6 mr-2">
                  <div
                    class="bg-green-600 h-6 rounded flex items-center justify-end pr-2"
                    style={"width: #{distribution_bar_width(count, total)}"}
                  >
                    <span class="text-xs text-white font-medium">
                      {if count > 0, do: format_number(count), else: ""}
                    </span>
                  </div>
                </div>
                <span class="text-xs text-gray-600 w-12 text-right">
                  {format_percentage(count, total)}
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
<!-- 5. PROFILE EXAMPLES (if profile selected) -->
    <%= if @selected_profile do %>
      <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">
          Top Movies: {@selected_profile.name} Profile
        </h2>

        <%= if assigns[:profile_examples] do %>
          <div class="space-y-3">
            <%= for {movie, index} <- Enum.with_index(@profile_examples, 1) do %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <span class="text-lg font-bold text-gray-400 mr-4">#{index}</span>
                  <div>
                    <.link
                      navigate={~p"/movies/#{movie.slug || movie.id}"}
                      class="font-medium text-gray-900 hover:text-blue-600"
                    >
                      {movie.title}
                    </.link>
                    <span class="text-sm text-gray-500 ml-2">
                      ({movie.year})
                    </span>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-lg font-bold text-gray-900">
                    {Float.round(movie.score * 100, 1)}%
                  </div>
                  <div class="text-xs text-gray-500">
                    Pop: {Float.round((movie.components["popular_opinion"] || 0) * 100, 0)}% |
                    Ind: {Float.round((movie.components["industry_recognition"] || 0) * 100, 0)}% |
                    Cult: {Float.round((movie.components["cultural_impact"] || 0) * 100, 0)}% |
                    People: {Float.round((movie.components["people_quality"] || 0) * 100, 0)}%
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-gray-500">Loading examples...</div>
        <% end %>

        <div class="mt-4 p-3 bg-blue-50 rounded-lg">
          <p class="text-sm text-blue-900">
            <strong>Profile Description:</strong>
            {@selected_profile.description || "Custom weight profile for movie discovery"}
          </p>
        </div>
      </div>
    <% end %>
    
<!-- 6. DATA SUMMARY -->
    <div class="bg-gray-100 rounded-lg p-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <div class="text-2xl font-bold text-gray-900">
            {format_number(@total_movies)}
          </div>
          <div class="text-sm text-gray-600">Total Movies</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-gray-900">
            {length(@metric_definitions)}
          </div>
          <div class="text-sm text-gray-600">Active Metrics</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-gray-900">
            {length(@weight_profiles)}
          </div>
          <div class="text-sm text-gray-600">Weight Profiles</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-gray-900">
            {Map.keys(@coverage_stats) |> length()}
          </div>
          <div class="text-sm text-gray-600">Data Sources</div>
        </div>
      </div>
    </div>
  <% end %>
</div>
