              <td class="px-4 py-2 text-center">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Industry Recognition
                </span>
              </td>
              <td class="px-4 py-2 text-center text-sm font-medium">Minor</td>
            </tr>
            
<!-- Cultural -->
            <tr>
              <td class="px-4 py-2 text-sm font-medium">Canonical Lists</td>
              <td class="px-4 py-2 text-sm">Count</td>
              <td class="px-4 py-2 text-center text-sm font-mono">0-‚àû</td>
              <td class="px-4 py-2 text-sm font-mono">count * 0.1</td>
              <td class="px-4 py-2 text-center">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
